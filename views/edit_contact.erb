  </div>

  <div class ="field">
    <label for="last-name">Last Name</label>
      <input class="ilname" type="text" name="last_name" value=" <%= @contact.last_name %>">
  </div>

  <div class="field">
   <label for="email">Email </label>
      <input class="iemail"type="email" name="email" value="<%= @contact.email %>">
   </div>

 <div class="field">
    <label for="notes">Notes</label>
      <input class="inotes"type="text" name="notes" value="<%= @contact.notes %>">
  </div>



